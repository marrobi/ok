{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "adminUsername": {
        "type": "string",
        "minLength": 1,
        "metadata": {
          "description": "Administrator username on all VMs"
        }
      },
      "adminPassword": {
        "type": "securestring",
        "metadata": {
          "description": "Administrator password on all VMs"
        }
      },
      "mySQLServerName": {
        "type": "string",
        "metadata": {
          "description": "Unique SQL Server Name"
        }
      },
      "redisName": {
        "type": "string",
        "metadata": {
          "description": "Unique redis Name"
        }
      },
      "templateBaseURL": {
        "type": "string",
        "defaultValue": "https://raw.githubusercontent.com/marrobi/ok/marcus_azure/azure/ARM/",
        "metadata": {
          "description": "Unique redis Name"
        }
      }
    },
  "variables": {

  },
    "resources": [
      
      {
        "name": "MSSQL",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2016-09-01",
        "dependsOn": [
       
  
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[concat(parameters('templateBaseURL'),'/MSSQL/sqlserver.json')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
  
            "sqlserverAdminLogin": {
              "value": "[parameters('sqlserverAdminLogin')]"
            },
            "sqlserverAdminLoginPassword": {
              "value": "[parameters('sqlserverAdminLoginPassword')]"
            }
          }
        }
  
      },
      {
        "name": "MSSQLDatabase",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2016-09-01",
        "dependsOn": [
       
  
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[concat(parameters('templateBaseURL'),'/MSSQL/database.json')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
  
            "dbName": {
              "value":  "[parameters('dbName')]"
             
            },
            "serverName": {
            
              "value":  "[parameters('serverName')]"
            }
          }
        }
  
      },
      {
        "name": "redis",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2016-09-01",
        "dependsOn": [
       
  
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[concat(parameters('templateBaseURL'),'redis.deploy.json')]",
       
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
  
            "redisName": {
              "value": "[parameters('redisName')]"
            }
  
          }
        }
  
      }
  
    ],
    "outputs": {
     
    }
  }